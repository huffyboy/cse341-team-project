{
	"env": {
		"browser": true,
		"node": true,
		"es2022": true
	},
	"extends": ["airbnb-base", "prettier"],
	"plugins": ["prettier"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"prettier/prettier": "error",
		"no-console": "off",
		"indent": ["error", "tab"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
		"import/extensions": ["error", "ignorePackages", {
          "js": "always"
        }]
	}
}
